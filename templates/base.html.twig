<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{% block title %}TKOH Bookstore{% endblock %}</title>
    <link rel="icon" type="image/png" href="{{ asset('images/Logo_STKH.png') }}">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    {% block stylesheets %}
        {{ encore_entry_link_tags('app') }}
    {% endblock %}
</head>
<body class="d-flex flex-column min-vh-100">

    {% include '_partials/_navbar.html.twig' %}

    {% include '_partials/_flash_messages.html.twig' %}

    <main class="flex-grow-1">
        {% block body %}{% endblock %}
    </main>
    {% include '_partials/_footer.html.twig' %}
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="//code.tidio.co/xpiryzps8bki7rfmv5gn9uq8u1pvo83c.js" async="true"></script>
    {% block javascripts %}
        {{ encore_entry_script_tags('app') }}
    {% endblock %}
</body>
</html>